<body>
    <div class="container mt-5">
        <div class="card p-3">
            <div class="card-header">
                <a href="/">
                    <img src="/imagens/home.png" alt="Logo" class="img-fluid mb-4" style="max-width: 80px;">
                    </a>
                <h3 class="mb-4">Inserir Perguntas</h3>
            </div>
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="titulo" class="form-label">Título</label>
                            <input type="text" id="titulo" name="titulo" placeholder="Título" class="form-control"
                                required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="descricao" class="form-label">Descrição da Pergunta</label>
                            <textarea id="descricao" name="descricao" placeholder="Descreva sua pergunta aqui"
                                class="form-control" rows="5" required></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</body>